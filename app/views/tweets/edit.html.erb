<div class="heading">Edit tweet</div>


<% if @parent_tweet%> 
  <%= form_with(model: [@parent_tweet, @tweet], method: :patch) do |f| %>
    <%= error_for(@tweet, :body) %>
    <div>
      <%= f.text_area :body, placeholder: "Write your tweet here...", autofocus: true%>
    </div>
      <%= f.submit "Update"%>
  <% end %>
  
<% else %>
  <%= form_with(model: @tweet, method: :patch) do |f| %>
    <%= error_for(@tweet, :body) %>
    <div>
      <%= f.text_area :body, placeholder: "Write your tweet here...", autofocus: true%>
    </div>
      <%= f.submit "Update"%>
  <% end %>
<% end %>