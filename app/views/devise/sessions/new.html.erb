<section class="card">

  <h2  class="heading--sm center-text mb-4 card__title">Sign in to your account</h2>

  <div class="card__container"> 

    <p   class="center-text mb-4 content-lg ">CONTINUE WITH</p>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <div data-turbo="false">
          <%=form_with(url: omniauth_authorize_path(resource_name, provider), method: :post) do |f|%>
            <%=f.submit "GITHUB" ,class: "button button--secondary button--max  mb-4"   %>
          <%end%>
        </div>
      <% end %>
    <% end %>

    <p  class="center-text mb-4 content-lg ">OR</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-4">
        <%= f.label :email , class:"content-xs overline"%>
            <div class="input__container">
        <%= f.email_field :email, autofocus: true,  class: "input__content", autocomplete: "email", placeholder: "example@gmail.com" %>
        </div>
      </div>

      <div class="field mb-4">
        <%= f.label :password, class:"content-xs overline"%>
            <div class="input__container">
        <%= f.password_field :password, class: "input__content", autocomplete: "current-password" , placeholder: "*******"  %>
        </div>
      </div>

      <div class="actions mb-4">
      <%= f.submit "Sign In"  ,class: "button button--primary button--max" %>
      </div>
    <% end %>

    <p class="center-text mb-4">Donâ€™t have an account?</p>
    <%= render "devise/shared/links" %>
  </div>

</section>